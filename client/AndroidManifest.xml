<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="cz.vutbr.fit.tam.and10"
      android:versionCode="1"
      android:versionName="0.1">
    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher">
        <activity android:label="@string/app_name" android:name="KeepDoin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainWindow"></activity>
        <activity android:icon="@drawable/ic_tab_artists" android:label="Now" android:name=".activities.NowTab"></activity>
        <activity android:icon="@drawable/ic_tab_artists" android:label="All" android:name=".activities.AllTab"></activity>
        <activity android:icon="@drawable/ic_tab_artists" android:label="Friends" android:name=".activities.FriendsTab"></activity>
        <activity android:icon="@drawable/ic_tab_artists" android:label="Me" android:name=".activities.MeTab"></activity>
        <activity android:label="User detail" android:name=".activities.UserDetail"></activity>
        
    </application>
    
    <!-- internet connection security permission -->
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <!--  get account for login and registration - we are using google account in phone  -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

<uses-sdk android:minSdkVersion="3"></uses-sdk>
</manifest> 